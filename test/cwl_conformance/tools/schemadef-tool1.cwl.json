{
    "class": "CommandLineTool",
    "requirements": [
        {
            "class": "SchemaDefRequirement",
            "types": [
                {
                    "name": "#main/HelloType",
                    "type": "record",
                    "fields": [
                        {
                            "name": "#main/HelloType/a",
                            "type": "string"
                        },
                        {
                            "name": "#main/HelloType/b",
                            "type": "string"
                        }
                    ]
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "#main/hello",
            "type": "#main/HelloType",
            "inputBinding": {
                "valueFrom": "$(self.a)/$(self.b)"
            }
        }
    ],
    "outputs": [
        {
            "id": "#main/output",
            "type": "File",
            "outputBinding": {
                "glob": "output.txt"
            }
        }
    ],
    "stdout": "output.txt",
    "baseCommand": "echo",
    "id": "#main",
    "cwlVersion": "v1.2"
}