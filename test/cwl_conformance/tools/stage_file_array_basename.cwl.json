{
    "class": "CommandLineTool",
    "id": "#main",
    "label": "Stage File Array (with Directory Basename)",
    "arguments": [
        "ls"
    ],
    "inputs": [
        {
            "id": "#main/input_list",
            "type": {
                "type": "array",
                "items": "File"
            },
            "secondaryFiles": [
                {
                    "pattern": ".sec",
                    "required": null
                }
            ]
        }
    ],
    "outputs": [
        {
            "id": "#main/output",
            "type": {
                "type": "array",
                "items": "File"
            },
            "outputBinding": {
                "glob": "input_dir/*"
            }
        }
    ],
    "requirements": [
        {
            "class": "InlineJavascriptRequirement"
        },
        {
            "class": "InitialWorkDirRequirement",
            "listing": [
                {
                    "entry": "${ return {class: 'Directory', basename: 'input_dir', listing: inputs.input_list} }"
                }
            ]
        }
    ],
    "cwlVersion": "v1.2"
}